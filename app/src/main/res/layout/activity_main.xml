<?xml version="1.0" encoding="utf-8"?>
<com.ccsf.aligntextview.AutoAlignLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:ll_child_font_size="15sp">

    <com.ccsf.aligntextview.AlignTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color="@color/colorPrimaryDark"
        app:pre_color="@android:color/holo_red_dark"
        app:pre_text="*"
        app:text="个人姓名这个" />

    <com.ccsf.aligntextview.AlignTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color="@color/colorPrimaryDark"
        app:pre_color="@android:color/holo_red_dark"
        app:pre_text="为啥"
        app:text="手机号码" />

    <com.ccsf.aligntextview.AlignTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color="@color/colorPrimaryDark"
        app:pre_color="@android:color/holo_red_dark"
        app:pre_text="*"
        app:text="家庭住址" />

    <com.ccsf.aligntextview.AlignTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color="@color/colorPrimaryDark"
        app:pre_color="@android:color/holo_red_dark"
        app:text="身份证号码" />

</com.ccsf.aligntextview.AutoAlignLinearLayout>